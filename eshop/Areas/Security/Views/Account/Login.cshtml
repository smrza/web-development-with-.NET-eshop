@model LoginViewModel
@{
    ViewData["Title"] = "Log In";
}

@section Styles
{
    <environment include="Development">
            <link rel="stylesheet" href="~/css/login_template.css">
    </environment>
    <environment exclude="Development">
            <link rel="stylesheet" href="~/css/login_template.min.css">
    </environment>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Form</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <div class="login-form">

            <form asp-action="Login" enctype="multipart/form-data" method="post">
                <h2 class="text-center">Log in</h2>
                <div class="form-group">
                    <input type="text" asp-for="@Model.Username" class="form-control" placeholder="Username" required="required" />
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Password" required="required" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Log in</button>
                </div>
                <div class="clearfix">
                    <label class="pull-left checkbox-inline"><input type="checkbox" asp-for="@Model.RememberMe" /> Remember me</label>
                </div>
            </form>


            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Don't have an account? <a asp-area="Security" asp-controller="Account" asp-action="Register"> Register</a>
                </div>
            </div>

        </div>

    </div>

</body>
</html>